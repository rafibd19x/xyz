  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
       var dd = $('#the_name');
	   var ddx = $('#time');
var max_len = dd.find('option').length;
$('#change').click(function () {
    var x = dd.find('option:selected').index();
	var zzz= dd.find('option:selected').text();
	var zzzz= ddx.find('option:selected').text();
    var zzzx = ":timex="+zzzz;
    if (max_len == x + 1) x = -1;
    dd.find('option').eq(x + 1).prop('selected', true);    
      
        document.getElementById('content').src = "chart.html?value="+zzz+zzzx;
        
         document.getElementById('content2').src = "chartt.html?value="+zzz+zzzx;
          $("p").text(zzz);

        $("html, body").animate({ scrollTop: 0 }, 600);
        return false;
    
       
       });
</script>

